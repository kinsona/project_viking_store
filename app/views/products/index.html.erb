<section id='products-index'>

  <%# jumbotron %>
  <div class='jumbotron'>

    <div class="container">

      <h1 class='text-center'>The Viking Store</h1>

    </div> <!-- container -->

  </div> <!-- jumbotron -->


  <div class='sub-jumbo'>
    <div class='container'>
      <h2 class='text-center'>The Best Viking Gear on the Whole Web</h2>
    </div>
  </div>



  <section class='products-index-panels'>

    <div class='container'>

      <div class='row products-index-header'>
