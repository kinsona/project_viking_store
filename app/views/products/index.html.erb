          <h4><em>Choose from among our lineup of fine items below</em></h4>
        </div>
      </div>


      <div class='row'>
        <div class='col-xs-10 col-xs-offset-1'>

          <div class='row'>
            <%= render @products %>
          </div>

        </div>
      </div>


    </div> <!-- content container -->

  </section> <!-- end of producst-index-panels section -->


