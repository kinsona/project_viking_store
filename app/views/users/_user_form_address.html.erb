<%= user_fields.fields_for :created_addresses do |address_fields| %>

  <div class='panel panel-default'>

    <div class='panel-body'>

      <h4 class='text-center'>Saved Address <%= number %> (optional)</h4>

      <div class='row'>
        <div class='col-xs-12'>
          <div class='form-group'>
            <%= address_fields.label :street_address, 'Street Address' %>
            <%= address_fields.text_field :street_address, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class='row'>
        <div class='col-xs-12'>
          <div class='form-group'>
            <%= address_fields.label :city, 'City' %>
            <%= address_fields.collection_select :city_id, City.all, :id, :name, {}, class: 'form-control' %>
          </div>
        </div>
      </div>


      <div class='row'>

        <div class='col-xs-6'>
          <div class='form-group'>
            <%= address_fields.label :state, 'State' %>
            <%= address_fields.collection_select :state_id, State.all, :id, :name, {}, { class: 'form-control' } %>
          </div>
        </div>

        <div class='col-xs-6'>
          <div class='form-group'>
            <%= address_fields.label :zip_code, 'ZIP Code' %>
            <%= address_fields.text_field :zip_code, class: 'form-control' %>
          </div>
        </div>

      </div>


      <div class='row'>
        <div class='col-xs-12'>
          <div class='form-group'>
            <%= user_fields.radio_button :shipping_id, address_fields.object.id  %>
            <%= user_fields.label :shipping_id, 'Default Shipping Address' %>
          </div>
        </div>
      </div>


      <div class='row'>
        <div class='col-xs-12'>
          <div class='form-group'>
            <%= user_fields.radio_button :billing_id, address_fields.object.id %>
            <%= user_fields.label :billing_id, 'Default Billing Address' %>
          </div>
        </div>
      </div>


      <% if current_user %>
        <div class='row'>
          <div class='col-xs-12'>
            <div class='form-group text-danger'>
              <%= check_box_tag :delete_address %>
              <%= label_tag :delete_address, 'Delete Address' %>
            </div>
          </div>
        </div>
      <% end %>

    </div> <!-- panel-body -->


  </div>

<% end %>